@model IEnumerable<IdentityRole>
@{
    ViewData["Title"] = "ListRoles";
    ViewBag.Title = "List Role";
}

<h1>All Roles</h1>
<a class="btn btn-primary" asp-action="CreateRole" asp-controller="Administration">create role</a>

@if (Model.Any())
{
    foreach (var role in Model)
    {
        <div class="card mb-3">
            <div class="card-header">
                Role ID: @role.Id
            </div>
            <div class="card-body">
                <h5 class="card-title">@role.Name</h5>
            </div>
            <div class="card-footer">
                <a class="btn btn-primary" asp-action="EditRole" asp-controller="Administration" asp-route-id="@role.Id">Edit</a>
                <a class="btn btn-danger">Delete</a>
            </div>
        </div>
    }
}
else
{
    <div class="card">
        <div class="card-header">
            No Roles created
        </div>
        <div class="card-body">
            <h5 class="card-title">Use button to create role</h5>
            <a class="btn btn-primary" asp-action="CreateRole" asp-controller="Administration">create role</a>
        </div>
    </div>
}