@model IEnumerable<ApplicationUser>

@{ 
    ViewBag.Title = "All Users";
}

    <h1>All Users</h1>
    <a asp-action="register" asp-controller="Account">create Users</a>
    <section>
        <div class="card mt-3">
            @if (Model.Any())
            {
                foreach (var user in Model)
                {
                    <div class="card-header">
                        <p>@user.Id</p>
                    </div>
                    <div class="card-body">
                        <h3>@user.UserName</h3>
                    </div>
                    <div class="card-footer">
                        <a asp-action="EditUser" asp-controller="Administration" class="btn btn-primary">Edit</a>
                        <a asp-action="DeleteUser" asp-controller="Administration" class="btn btn-danger">Delete</a>
                    </div>
                }
            }
            else
            {
                <div class="card">
                    <div class="card-header">
                        No Users
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">Use button to create role</h5>
                        <a class="btn btn-primary" asp-action="register" asp-controller="Account">create User</a>
                    </div>
                </div>
            }
        </div>       
    </section>